
<% include header.ejs%>
<link rel='stylesheet' href='/stylesheets/detail.css' />
<script src='/javascripts/detail.js'></script>


<div class="container">
	<div class="row">
		<h1 class="col-md-12"><%=book.title %></h1>
    <div class="row">
		<div class="col-md-3 col-md-offset-1">
			<a href="<%=book.image %>"><img class="img_size" src="<%=book.large_image %>"></a>
		</div>
		<div class="col-md-3 col-md-offset-1">
			<p>作者:<%=book.author %></p>
			<p>译者:<%=book.translator %></p>
			<p>出版年:<%=book.pubdate %></p>
			<p>页数:<%=book.pages %></p>
			<p>定价:<%=book.price %></p>
			<p>装帧:<%=book.binding %></p>
		</div>

		<div class="col-md-12">
			<p>内容简介  · · · · · ·</p>
			<p><%=book.author_intro %></p>
		</div>
		<div class="col-md-12">
			<p>作者简介  · · · · · · </p>
			<p><%=book.summary %></p>
		</div>
	</div>
	</div>
</div>

<% include footer.ejs%>



